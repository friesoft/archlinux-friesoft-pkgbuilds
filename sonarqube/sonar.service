[Unit]
Description=A code quality management platform.
After=network.target

[Service]
User=sonar
Type=forking
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=sonar
ExecStart=/opt/sonar/bin/sonar.sh start
ExecStop=/opt/sonar/bin/sonar.sh stop
PIDFile=/opt/sonar/run/sonar.pid
OOMScoreAdjust=-1000
LimitCPU=infinity
LimitFSIZE=infinity
LimitDATA=infinity
LimitCORE=0
LimitAS=infinity
LimitLOCKS=infinity

[Install]
WantedBy=multi-user.target

