pkgname=unixodbc-compat
pkgver=2.2.14
pkgrel=2
pkgdesc="ODBC is an open specification for providing application developers with a predictable API with which to access Data Sources - this package provides compatibility to iodbc"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.unixodbc.org/"
backup=('etc/odbc.ini' 'etc/odbcinst.ini')
depends=('readline>=6.0')
options=('!libtool')
provides=('unixodbc' 'iodbc' 'libiodbc' 'apr-util-iodbc')
conflicts=('unixodbc' 'iodbc' 'libiodbc' 'apr-util-iodbc')
source=(http://www.unixodbc.org/unixODBC-$pkgver.tar.gz)
md5sums=('f47c2efb28618ecf5f33319140a7acd0')

build() {
    cd $startdir/src/unixODBC-$pkgver
    ./configure --prefix=/usr --sysconfdir=/etc --enable-gui=no
    make || return 1
    make DESTDIR=$startdir/pkg install
}

