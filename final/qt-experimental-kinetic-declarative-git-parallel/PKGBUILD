# $Id$
# Contributor: friesoft <friesoft@gmail.com>
# This package provides the kinetic clone of Qt (branch declarative) to be installed in parallel to existing Qt installations

pkgname=qt-experimental-kinetic-declarative-git-parallel
pkgver=20090920
pkgrel=1
pkgdesc="The C++ Qt GUI framework - kinetic clone - branch declarative - for parallel installation"
arch=('i686' 'x86_64')
url="http://www.qtsoftware.com"
license=('GPL3' 'LGPL')

depends=('libpng' 'mesa' 'fontconfig' 'libtiff' 'libmng' 'sqlite3' 'libxrandr' 'glib2' 'libxi' 'dbus' 'libxcursor' 'libxinerama' 'libxrender')
optdepends=('postgresql-libs' 'libmysqlclient' 'unixodbc')
makedepends=('inputproto' 'postgresql-libs' 'mysql' 'unixodbc' 'cups' 'libxfixes' 'gtk2')
provides=('qt-experimental-kinetic-declarative-git-parallel')
options=('!libtool' 'docs')

# desktop files and qdoc3 patch -- needed for qtdesigner-git build
source=('assistant.desktop' 'designer.desktop' 'linguist.desktop' 'qtconfig.desktop' 'qdoc3.patch')

md5sums=('52088b787270507a49688097bc4b3cc0'
         '7bbb3eae31956cba13901201f37af419'
         'abd05e58f59c29b389ba19f59293f0d6'
         '5b2534399739eef1f81af91805850581'
         '4c831aa3979f3b9aa0c921a551dec9b0')

_gitroot="git://gitorious.org/+qt-kinetic-developers/qt/kinetic.git"
_gitname="kinetic"

build() {
          msg "Connecting to git server...."

          if [ -d ${srcdir}/$_gitname ] ; then
                    cd $_gitname
                    git pull git://gitorious.org/qt/kinetic.git kinetic-declarativeui

                    msg "The local files have been updated to the current revision"

                    cd $srcdir/$_gitname
          else
                    git clone $_gitroot

                    cd $srcdir/$_gitname

                    git checkout --track -f -b kinetic-declarativeui origin/kinetic-declarativeui

                    # apply qdoc3 patch
                    patch -p0 -i $srcdir/qdoc3.patch

                    sed -i "s|-O2|$CXXFLAGS|" mkspecs/common/g++.conf
                    sed -i "/^QMAKE_RPATH/s| -Wl,-rpath,||g" mkspecs/common/g++.conf
          fi

          unset QMAKESPEC
          export QT4DIR=$srcdir/$_gitname
          export PATH=${QT4DIR}/bin:${PATH}
          export LD_LIBRARY_PATH=${QT4DIR}/lib:${LD_LIBRARY_PATH}

          ./configure -confirm-license -opensource \
                    -prefix /opt/qt-experimental/kinetic-declarative \
                    -sysconfdir /etc \
                    -plugindir /opt/qt-experimental/kinetic-declarative/lib/plugins \
                    -translationdir /opt/qt-experimental/kinetic-declarative/share/translations \
                    -datadir /opt/qt-experimental/kinetic-declarative/share \
                    -docdir /opt/qt-experimental/kinetic-declarative/share/doc \
                    -examplesdir /opt/qt-experimental/kinetic-declarative/share/doc/examples \
                    -demosdir /opt/qt-experimental/kinetic-declarative/share/doc/demos \
                    -largefile \
                    -plugin-sql-{psql,mysql,sqlite,odbc} \
                    -system-sqlite \
                    -xmlpatterns \
                    -no-phonon \
                    -svg \
                    -webkit \
                    -scripttools \
                    -system-zlib \
                    -system-libtiff \
                    -system-libpng \
                    -system-libmng \
                    -system-libjpeg \
          #          -openssl-linked \             # compile error
                    -optimized-qmake \
                    -dbus-linked \
                    -reduce-relocations \
                    -no-separate-debug-info \
                    -gtkstyle \
                    -opengl \
                    -glib \
                    -cups \
                    -iconv \
                    -xinerama \
                    -xcursor \
                    -xfixes \
                    -qdbus

          # build qt kinetic declarative ui
          make
          make docs

          #install everything
          make INSTALL_ROOT=$pkgdir install

          install -D -m644 tools/assistant/tools/assistant/images/assistant.png ${pkgdir}/opt/qt-experimental/kinetic-declarative/share/pixmaps/assistant.png
          install -D -m644 tools/linguist/linguist/images/appicon.png ${pkgdir}/opt/qt-experimental/kinetic-declarative/share/pixmaps/linguist.png
          install -D -m644 tools/designer/src/designer/images/designer.png ${pkgdir}/opt/qt-experimental/kinetic-declarative/share/pixmaps/designer.png
          install -D -m644 src/gui/dialogs/images/qtlogo-64.png ${pkgdir}/opt/qt-experimental/kinetic-declarative/share/pixmaps/qtlogo.png
          install -d ${pkgdir}/opt/qt-experimental/kinetic-declarative/share/applications
          install -m644 ${srcdir}/{linguist,designer,assistant,qtconfig}.desktop ${pkgdir}/opt/qt-experimental/kinetic-declarative/share/applications
          install -D -m644 LGPL_EXCEPTION.txt ${pkgdir}/opt/qt-experimental/kinetic-declarative/share/licenses/LGPL_EXCEPTION.txt

          install -d ${pkgdir}/opt/qt-experimental/kinetic-declarative/doc
          cp -r doc/html ${pkgdir}/opt/qt-experimental/kinetic-declarative/doc
          cp -r doc/qch ${pkgdir}/opt/qt-experimental/kinetic-declarative/doc
          cp -r doc/src ${pkgdir}/opt/qt-experimental/kinetic-declarative/doc

          # cleanup and path fixes
          find $pkgdir/opt/qt-experimental/kinetic-declarative/lib -type f -name '*prl' -print -exec sed -i -e "/^QMAKE_PRL_BUILD_DIR/d" {} \;
          sed -i -e "s|-L$srcdir/${_pkgfqn}/lib||g" $pkgdir/opt/qt-experimental/kinetic-declarative/lib/pkgconfig/*.pc
          sed -i -e "s|$srcdir/${_pkgfqn}/bin/moc|/opt/qt-experimental/kinetic-declarative/bin/moc|g" $pkgdir/opt/qt-experimental/kinetic-declarative/lib/pkgconfig/*.pc
          sed -i -e "s|$srcdir/${_pkgfqn}/bin/uic|/opt/qt-experimental/kinetic-declarative/bin/uic|g" $pkgdir/opt/qt-experimental/kinetic-declarative/lib/pkgconfig/*.pc
}
