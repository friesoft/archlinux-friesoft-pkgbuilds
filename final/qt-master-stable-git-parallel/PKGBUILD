# $Id$
# Contributor: friesoft <friesoft@gmail.com>
# This package provides the master-stable branch of Qt to be installed in parallel to existing Qt installations

pkgname=qt-master-stable-git-parallel
pkgver=20091107
pkgrel=1
pkgdesc="The C++ Qt GUI framework - current development snapshot (master-stable branch) - for parallel installation"
arch=('i686' 'x86_64')
url="http://www.qtsoftware.com"
license=('GPL3' 'LGPL')

depends=('libpng' 'mesa' 'fontconfig' 'libtiff' 'libmng' 'sqlite3' 'libxrandr' 'glib2' 'libxi' 'dbus' 'libxcursor' 'libxinerama' 'libxrender' 'ca-certificates')
optdepends=('postgresql-libs' 'libmysqlclient' 'unixodbc-compat')                                    ## unixodbc-compat can also be replaced by either unixodbc or iodbc
makedepends=('inputproto' 'postgresql-libs' 'mysql' 'unixodbc-compat' 'cups' 'libxfixes' 'gtk2')
options=('!libtool' 'docs')

# desktop files and qdoc3 patch -- needed for qtdesigner-git build
source=('assistant.desktop' 'designer.desktop' 'linguist.desktop' 'qtconfig.desktop' 'qdoc3.patch' 'ca-certificates.patch')

md5sums=('e485923bd2c96401087df9c612928c79'
         '93155664d01c8a7424b213bf8c913276'
         'a317912af243405afcb7dea37a407b30'
         '282b505132c432f5fb0fe674669b0c39'
         '54f953a69271404be995819f40390369'
         'b443cbb327ae11678b71886f793303cc')

_gitroot="git://gitorious.org/qt/qt.git"
_gitname="qt"

build() {
          msg "Connecting to git server...."

          if [ -d ${srcdir}/$_gitname ] ; then
                    cd $_gitname
                    git pull git://gitorious.org/qt/qt.git master-stable

                    msg "The local files have been updated to the current revision"

                    cd $srcdir/$_gitname
          else
                    git clone $_gitroot

                    cd $srcdir/$_gitname

                    # branch: master-stable (master branch which should always compile)
                    git checkout -b master-stable

                    # apply qdoc3 patch
                    patch -p1 -i $srcdir/qdoc3.patch

                    # use system ssl cert bundle
                    patch -p1 -i $srcdir/ca-certificates.patch

                    sed -i "s|-O2|$CXXFLAGS|" mkspecs/common/g++.conf
                    sed -i "/^QMAKE_RPATH/s| -Wl,-rpath,||g" mkspecs/common/g++.conf
          fi

          unset QMAKESPEC
          export QT4DIR=$srcdir/$_gitname
          export PATH=${QT4DIR}/bin:${PATH}
          export LD_LIBRARY_PATH=${QT4DIR}/lib:${LD_LIBRARY_PATH}

          ./configure -confirm-license -opensource \
                    -prefix /opt/qt-master-stable \
                    -sysconfdir /etc \
                    -plugindir /opt/qt-master-stable/lib/plugins \
                    -translationdir /opt/qt-master-stable/share/translations \
                    -datadir /opt/qt-master-stable/share \
                    -docdir /opt/qt-master-stable/share/doc \
                    -examplesdir /opt/qt-master-stable/share/doc/examples \
                    -demosdir /opt/qt-master-stable/share/doc/demos \
                    -largefile \
                    -plugin-sql-{psql,mysql,sqlite,odbc} \
                    -system-sqlite \
                    -xmlpatterns \
                    -no-phonon \
                    -svg \
                    -webkit \
                    -scripttools \
                    -system-zlib \
                    -system-libtiff \
                    -system-libpng \
                    -system-libmng \
                    -system-libjpeg \
#                    -openssl-linked \             # compile error
                    -dbus-linked \
                    -reduce-relocations \
                    -no-separate-debug-info \
                    -gtkstyle \
                    -opengl \
                    -glib \
                    -cups \
                    -iconv \
                    -xinerama \
                    -xcursor \
                    -xfixes \
                    -qdbus

          # build qt master
          make || return 1
          make docs

          #install everything
          make INSTALL_ROOT=$pkgdir install

          install -D -m644 tools/assistant/tools/assistant/images/assistant.png ${pkgdir}/opt/qt-master-stable/share/pixmaps/assistant.png
          install -D -m644 tools/linguist/linguist/images/appicon.png ${pkgdir}/opt/qt-master-stable/share/pixmaps/linguist.png
          install -D -m644 tools/designer/src/designer/images/designer.png ${pkgdir}/opt/qt-master-stable/share/pixmaps/designer.png
          install -D -m644 src/gui/dialogs/images/qtlogo-64.png ${pkgdir}/opt/qt-master-stable/share/pixmaps/qtlogo.png
          install -d ${pkgdir}/opt/qt-master-stable/share/applications
          install -m644 ${srcdir}/{linguist,designer,assistant,qtconfig}.desktop ${pkgdir}/opt/qt-master-stable/share/applications/
          install -D -m644 LGPL_EXCEPTION.txt ${pkgdir}/opt/qt-master-stable/share/licenses/LGPL_EXCEPTION.txt

          install -d ${pkgdir}/opt/qt-master-stable/share/doc
          cp -r doc/* ${pkgdir}/opt/qt-master-stable/share/doc

          # cleanup and path fixes
          find $pkgdir/opt/qt-master-stable/lib -type f -name '*prl' -print -exec sed -i -e "/^QMAKE_PRL_BUILD_DIR/d" {} \;
          sed -i -e "s|-L$srcdir/${_pkgfqn}/lib||g" $pkgdir/opt/qt-master-stable/lib/pkgconfig/*.pc
          sed -i -e "s|$srcdir/${_pkgfqn}/bin/moc|/opt/qt-master-stable/bin/moc|g" $pkgdir/opt/qt-master-stable/lib/pkgconfig/*.pc
          sed -i -e "s|$srcdir/${_pkgfqn}/bin/uic|/opt/qt-master-stable/bin/uic|g" $pkgdir/opt/qt-master-stable/lib/pkgconfig/*.pc
}
